{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "strict": true,
    "importsNotUsedAsValues": "error",
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "bin",
  },
  "include": ["src/**/*.ts"]
}